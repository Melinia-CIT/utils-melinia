{
  "name": "qr-code",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/client-entry.tsx --outdir ./src --format esm --target browser",
    "build:app": "bun build src/app.tsx --outdir ./src --format esm --target browser",
    "build:client": "bun build src/client.tsx --outdir ./src --format esm --target browser",
    "build:all": "bun run build:client && bun run build:app && bun run build"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "@napi-rs/canvas": "^0.1.88",
    "@types/qrcode": "^1.5.6",
    "hono": "^4.11.4",
    "qrcode": "^1.5.4"
  },
  "devDependencies": {
    "@types/bun": "latest"
  }
}